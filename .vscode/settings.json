{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "ruff.lineLength": 80,
    "ruff.configuration": {
        "format": {
            "docstring-code-format": true
        }
    }
}